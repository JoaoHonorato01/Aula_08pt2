package DiaDaSemana;
import java.util.Scanner;
public class Semana {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		 
		
		System.out.println("DIGITE UM NUMERO DE (1 A 7)");
		int DiaDaSemana = scanner.nextInt();
			
			switch(DiaDaSemana) {
			case 1:
				System.out.print("resultado: domingo");
			break;
			case 2:
				System.out.print("resultado: segunda");
			break;
			case 3:
			System.out.print("resultado: ter√ßa");
			break;
			case 4:
				System.out.print("resultado: quarta");
			break;
			case 5:
				System.out.print("resultado: quinta");
			break;
			case 6:
				System.out.print("resultado: sexta");
			break;
			case 7:
				System.out.print("resultado: sabado");
			break;
			
			}			scanner.close();

	}

}
